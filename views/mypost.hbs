<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reddit Home</title>
    <link rel="icon" type="image/png" href="../public/images/Reddit.png">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #1a1a1b; /* Dark Reddit-like background */
            color: white;
            font-family: Arial, sans-serif;
            margin: 0;
        }

        .navbar {
            background-color: #333;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 60px; 
            z-index: 1000;
            display: flex;
            align-items: center;
            padding: 0 15px;
        }

        .navbar-brand {
            display: flex;
            align-items: center;
            color: white;
            text-decoration: none;
        }

        .navbar-brand img {
            width: 30px;
            height: 30px;
            margin-right: 10px;
        }

        .form-control {
            width: 550px !important;
            border-radius: 30px;
        }

        .btn-tangarin {
            background-color: #FF6347; 
            border-color: #FF6347;
            color: white;
            border-radius: 20px;
        }

        .btn-tangarin:hover {
            background-color: #FF4500;
            border-color: #FF4500;
        }

        .sidebar {
            background-color: #272729; 
            height: 100vh;
            width: 220px; 
            position: fixed;
            top: 0;
            left: 0;
            padding: 80px 10px 20px; 
            display: flex;
            flex-direction: column;
        }

        .sidebar .nav-item {
            margin-bottom: 20px;
        }

        .sidebar .nav-link {
            display: flex;
            align-items: center;
            color: white;
            text-decoration: none;
            padding: 10px 15px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .sidebar .nav-link:hover {
            background-color: #383838;
        }

        .sidebar .nav-link span {
            margin-left: 10px;
            font-size: 14px;
        }

        .content {
            margin-left: 240px; /* Adjusted for sidebar width */
            padding: 80px 20px 20px; 
        }

        .post {
            margin-bottom: 20px;
        }

        .card {
            background-color: #272729;
            border: none;
        }

        .card-body {
            display: flex;
            justify-content: space-between;
            align-items: center;
            color: white;
        }

        .card-title {
            font-size: 18px;
            font-weight: bold;
        }

        .card-text {
            font-size: 14px;
        }

        .delete-link {
            color: #FF6347;
            text-decoration: none;
            font-size: 14px;
            transition: color 0.3s;
        }

        .delete-link:hover {
            color: #FF4500;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="#">
            <img src="../public/images/Reddit.png" alt="Reddit Logo">
            <span>Reddit</span>
        </a>
        <div class="collapse navbar-collapse justify-content-center">
            <form class="form-inline my-2 my-lg-0" id="search-form">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="query" id="search-input">
                <button class="btn btn-tangarin my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
        <button class="btn btn-tangarin ml-auto" id="logout-button">Logout</button>
    </nav>

    <!-- Sidebar -->
    <div class="sidebar">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" href="/home">
                    <img src="https://img.icons8.com/ios-filled/24/ffffff/home.png" alt="Home Icon">
                    <span>Home</span>
                </a>
            </li>
        </ul>
    </div>

    <!-- Content Area -->
    <div class="content">
        <h1>My Posts</h1>
        <div id="dynamic-content">
            {{#each posts}}
            <div class="post">
                <div class="card">
                    <div class="card-body">
                        <div>
                            <h5 class="card-title">{{this.title}}</h5>
                            <p class="card-text">{{this.content}}</p>
                        </div>
                        <a href="/upload/delete/{{this.id}}" class="delete-link">Delete</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        document.getElementById('logout-button').addEventListener('click', function() {
            window.location.href = '/login'; // Redirect to login page
        });
    </script>
</body>
</html>
